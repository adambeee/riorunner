<div class="row">
  <div class="col-sm-8 col-sm-offset-2">

    <div id="user-widget">
      <% if current_user %>
          Welcome <strong><%= current_user.name %></strong>!
          <%= link_to "Sign out", signout_path, id: "sign_out" %>
      <% else %>
          <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: "back-btn-opaque" %>
          <%= link_to "Sign in with Twitter", "/auth/twitter", id: "sign_in", class: "back-btn-opaque" %>
          <%= link_to "Sign in with LinkedIn", "/auth/linkedin", id: "sign_in", class: "back-btn-opaque" %>
      <% end %>
    </div>


    <h2>Sign up</h2>
    <%= form_for(resource, :as => resource_name, html: {class: "form-group form-horizontal cmxform", role: "form", id: "signupForm"}, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <div class = "col-xs-6">
            <%= f.label :first_name, class: "control-label"%>
            <%= f.text_field :first_name, :placeholder =>"First Name", :autofocus => true, class: "form-control pull-left" %>
          </div>

          <div class = "col-xs-6">
            <%= f.label :last_name, class: "control-label" %>
            <%= f.text_field :last_name, :placeholder =>"Last Name", class: "form-control pull-left" %>
          </div>
        </div>
        <div class = "row form-group">
          <div class = "col-sm-3">
            <%= f.label :phone, class: "control-label" %>
            <%= f.text_field :phone, class: "form-control pull-left", :placeholder =>"5051234567"%>
          </div>
          <div class = "col-sm-6">
            <%= f.label :email, class: "control-label" %>
            <%= f.email_field :email, class: "form-control pull-right", :placeholder =>"adam@riorunner.com"%>
          </div>
        </div>
        <div class="row">
          <div class = "col-xs-6">
            <%= f.label :password, class: "control-label" %>
            <%= f.password_field :password, :placeholder =>"Password", class: "form-control pull-left"%>
          </div>
          <div class = "col-xs-6">
            <%= f.label :password_confimation, class: "control-label" %>
            <%= f.password_field :password_confimation, :placeholder =>"Confirm Password", class: "form-control pull-left"%>
          </div>
        </div>
        <div class = "row">
          <div class = "col-sm-6 col-sm-offset-6">
            <br/>
            <%= f.submit "Sign up", class: "back-btn-opaque pull-right" %>
          </div>
        </div>
    <% end %>
    <h3>PS... This form definitely needs some sprucing up...</h3>
  </div>
