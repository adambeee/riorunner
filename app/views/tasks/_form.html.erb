<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
    <%= f.label :description %>
    <%= f.text_field :description, class: "tokenize", placeholder: "Tags" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
    $('input.tokenize').tokenfield();
</script>